{
  "name": "typink",
  "version": "0.0.0",
  "description": "Fully-typed react hooks to interact with ink! smart contract powered by Dedot!",
  "author": "Thang X. Vu <thang@coongcrafts.io>",
  "main": "src/index.ts",
  "sideEffects": false,
  "type": "module",
  "scripts": {
    "build": "tsc --project tsconfig.build.json && yarn copy",
    "clean": "rm -rf ./dist && rm -rf ./tsconfig.tsbuildinfo ./tsconfig.build.tsbuildinfo",
    "copy": "cp -R ./src/* ./dist"
  },
  "dependencies": {
    "dedot": "^0.6.0",
    "react": "^18.3.1",
    "react-use": "^17.5.1"
  },
  "devDependencies": {
    "@polkadot/extension-inject": "^0.54.1",
    "@types/react": "^18.3.11"
  },
  "publishConfig": {
    "access": "public",
    "directory": "dist"
  },
  "engines": {
    "node": ">=18"
  },
  "license": "MIT"
}
